<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @user.avatar, class:"img-responsive img-rounded " if @user.avatar%>
      <div class="text-center">
        <%= @user.name%>
      </div>
      
    </div>
    <div class="col-md-9">
      <%= truncate(simple_format(@user.introduction), length: 200)%>
      <%= link_to '編輯個人資料', edit_user_path if current_user == @user %>
    </div>
  </div>
  <br>
  
  <%= render :partial => "shared/tabs_user", :locals => { :selected_item => '文章列表' } %>

  <table class="table">
    <thead>
      <tr>
        <th>標題</th>
        <th>分類</th>
        <th>發佈時間</th>
      </tr>        
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.category.name %></td>
          <td><%= article.created_at.to_s[0..15] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>